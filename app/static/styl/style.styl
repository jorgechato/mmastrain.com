.sobremi
	height 100%
	//overflow-y auto
	
	figure
		margin 0 
		max-width 195px
		padding 0.6em 1em 0 0
		float left

		img
			border-radius 0.25em
			box-shadow 0px 0px 10px rgba(0,0,0,0.3)
			width 100%

	article
		margin 0
		padding 0

	figure
	article
		vertical-align top

.lector
	height 100%

	.comments
		border-radius .5em
		box-shadow -0.8px 6px 20px rgba(0,0,0,0.06)
		margin-top 10px
		padding 30px
		
		.comment
			font-size 1.4em

		h4
		time
			display inline-block
			vertical-align top

		h4
			&:before
				content "—  "

		time
			margin-top 1.33em

		.lover
				text-decoration none
				
			.love
				float right
				margin-top 3em
				color rgba(black,.5)

				&:after
					content "    \e603"
					font-family 'iconreg'
					font-size 2em

				&:hover
					color rojo

	.aviso
		margin-top 140px
		
	.largo

		.submit
			width 100%
			background rojo
			border none
			color white
			font-weight 200
			font-size 1.3em
			margin 1em auto 0 auto
			padding 10px 0
			position relative
			border-radius .4em
			box-shadow 0 .44em rojoFuerte
			letter-spacing: 1px;

			&:hover
				box-shadow 0 .3em rojoFuerte
				top .16em

			&:before
				color black
				content "\e600"
				font-family 'iconreg'
				font-size 3.5em
				position absolute
				top -.2em
				left -4px
	
	.cerrarSesion
		font-size 0.75em
		text-align center

		a
			color rojo
			text-decoration none

	.formulario
		margin-top 140px


	border-bottom solid rgba(0,0,0,1) 1px
	font-size 1.3em
	//line-height 29px
	overflow-x auto
	text-align center
	white-space nowrap

	ul
		li
			display inline-block
			margin-right 0.8em
			vertical-align top

			a
				color #111
				padding-bottom 18px
				text-decoration none
				width 100%

				&:hover
					border-bottom solid rgba(0,0,0,0.7) 3px

section
	//height 100vh
	position relative

.coockies
	color rgba(0,0,0,0.3)
	float left

.git
	color rgba(0,0,0,0.3)
	font-family: 'Open Sans', sans-serif;
	text-decoration none

	.author
		color rgba(0,0,0,0.3)
		float right
		font-family 'iconreg'
		font-size .9em	
		padding-right 1em

		&:before
			content "-"
			font-size 1.3em

		&:after

@font-face {
	font-family: 'iconreg';
	src:url('../fonts/iconreg.eot?-n0nvqs');
	src:url('../fonts/iconreg.eot?#iefix-n0nvqs') format('embedded-opentype'),
		url('../fonts/iconreg.woff?-n0nvqs') format('woff'),
		url('../fonts/iconreg.ttf?-n0nvqs') format('truetype'),
		url('../fonts/iconreg.svg?-n0nvqs#iconreg') format('svg');
	font-weight: normal;
	font-style: normal;
}

rojo = rgb(187,36,42)
rojoFuerte = #841e25
gris = #e0e0e0
grisFuerte = #c9c8c7
twitter = rgb(44,218,192)
twitterFuerte = rgb(7,162,165)
facebook = rgb(31,111,198)
facebookFuerte = rgb(62,67,89)

border-radius()
	-webkit-border-radius arguments
	-moz-border-radius arguments
	border-radius arguments

transform()
	-webkit-transform arguments
	-moz-transform arguments
	border-transform arguments

transition()
	-webkit-transition arguments
	-moz-transition arguments
	border-transition arguments

::selection
	background-color rgba(rojo, 0.7)

a
	color rojo
	text-decoration none

body
	font-size 16px
	font-family: 'Open Sans', sans-serif;
	font-weight 400

footer
	background #000100
	color white
	height 75px
	margin 100px 0 0 0
	padding 8px 0
	text-align center
	width 100%

	span
		
		img
			width 70px

h2
	padding-top 70px

header
	background #222 url("../img/studio.jpg") center  no-repeat
	background-size 100% auto
	background-size cover
	height 250px
	margin-bottom 180px
	text-align center
	width 100%

	.logo
		background url("../img/logo.png") center  no-repeat
		background-size cover
		height 250px
		opacity 1
		margin 0 auto
		position relative
		top 40px
		width 187.05px
		z-index 2

	h1
		display block
		font-weight 700

		a
			text-decoration none
			color #111

		.ma

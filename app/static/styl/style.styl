.nav--clone
	position fixed
	top 0
	left 0
	width 100%
	line-height 29px
	overflow-x auto
	text-align center
	white-space nowrap
	z-index 100
	/*transition -100%*/
	transform translateY(-100%)
	/*animation*/
	transition all 300ms ease-in-out

.nav--stick
	transform translateY(0%)


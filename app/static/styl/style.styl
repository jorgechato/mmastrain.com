				background-color #eeeeee
				width 95%
				margin 8px 0
				border-radius 5px

			textarea
				height 3em

			.button
				background gris
				border none
				color rojo
				font-weight 700
				margin 1em auto 0 auto
				padding 6px
				position relative
				width 200px
				border-radius 5px
				box-shadow 0 6px grisFuerte
				text-decoration none
				letter-spacing: 1px;
				text-transform: uppercase;

				&:hover
					box-shadow 0 4px grisFuerte
					top: 2px

			.submit
				background rojo
				border none
				color white
				font-weight 700
				margin 1em auto 0 auto
				padding 6px
				position relative
				width 200px
				border-radius 5px
				box-shadow 0 6px rojoFuerte
				letter-spacing: 1px;
				text-transform: uppercase;

				&:hover
					box-shadow 0 4px rojoFuerte
					top: 2px
			
			.pluma
				float right
				letter-spacing: 1px;

				&:hover
					box-shadow 0 4px rojoFuerte
					margin-top 18px

				&:before
					color black
					content "\e600"
					font-family 'iconreg'
					font-size 3.5em
					position absolute
					top -.2em
					left -4px


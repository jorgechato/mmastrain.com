@import url(//fonts.googleapis.com/css?family=Inconsolata)
@import url(//fonts.googleapis.com/css?family=Open+Sans)

body
	font-size 16px
	font-family: 'Open Sans', sans-serif;
	font-weight 400

header
	background #222 url("../img/studio.jpg") center  no-repeat
	background-size 100% auto
	background-size cover
	height 250px
	margin-bottom 180px
	text-align center
	width 100%

	.logo
		background url("../img/logo.png") center  no-repeat
		background-size cover
		height 250px
		opacity 1
		margin 0 auto
		position relative
		top 40px
		width 187.05px
		z-index 2

	h1
		display block
		font-family 'Inconsolata'
		font-weight 400

		a
			text-decoration none
			color #111

		.ma
			font-size 0.5em
			position relative
			top -0.8em

			&:before
				content "MÂª"

nav
	background rgba(255,255,255,0.5)
	border-bottom solid rgba(0,0,0,0.7) 1px
	font-size 1.3em
	line-height 27px
	overflow-x auto
	text-align center
	white-space nowrap

	ul
		li
			display inline-block
			margin-right 0.8em
			vertical-align top

			a
				color #111
				padding-bottom 19px
				text-decoration none
				width 100%

				&:hover
					border-bottom solid rgba(0,0,0,0.7) 3px

section
	max-width 590px
	margin 0 auto
	padding 2.5em 0.5em 0 0.5em
	position relative

.sobremi
	
	figure
		margin 0 
		max-width 195px
		padding 0.6em 1em 0 0
		float left

		img
			border-radius 0.25em
			box-shadow 0px 0px 10px rgba(0,0,0,0.3)
			width 100%

	article
		margin 0
		padding 0

	figure
	article
		vertical-align top




















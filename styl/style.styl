@import url(//fonts.googleapis.com/css?family=Inconsolata)
@import url(//fonts.googleapis.com/css?family=Open+Sans)


border-radius()
	-webkit-border-radius arguments
	-moz-border-radius arguments
	border-radius arguments

 transform()
	-webkit-transform arguments
	-moz-transform arguments
	border-transform arguments

 transition()
	-webkit-transition arguments
	-moz-transition arguments
	border-transition arguments


body
	font-size 16px
	font-family 'Open Sans'
	font-weight 400

footer
	background #000100
	color white
	height 75px
	margin 100px 0 0 0
	padding 8px 0
	text-align center
	width 100%

	span
		
		img
			width 70px

header
	background #222 url("../img/studio.jpg") center  no-repeat
	background-size 100% auto
	background-size cover
	height 250px
	margin-bottom 180px
	text-align center
	width 100%

	.logo
		background url("../img/logo.png") center  no-repeat
		background-size cover
		height 250px
		opacity 1
		margin 0 auto
		position relative
		top 40px
		width 187.05px
		z-index 2

	h1
		display block
		font-family 'Inconsolata'
		font-weight 400

		a
			text-decoration none
			color #111

		.ma
			font-size 0.5em
			position relative
			top -0.8em

			&:before
				content "MÂª"

nav
	background rgba(255,255,255,0.9)
	border-bottom solid rgba(0,0,0,0.7) 1px
	font-size 1.3em
	line-height 27px
	overflow-x auto
	text-align center
	white-space nowrap

	ul
		li
			display inline-block
			margin-right 0.8em
			vertical-align top

			a
				color #111
				padding-bottom 19px
				text-decoration none
				width 100%

				&:hover
					border-bottom solid rgba(0,0,0,0.7) 3px

section
	height 100vh
	position relative

.git
	color rgba(0,0,0,0.3)
	font-family 'Open Sans'
	text-decoration none

	.author
		color rgba(0,0,0,0.3)
		float right
		font-family 'iconreg'
		font-size .9em	
		padding-right 1em

		&:before
			content "-"
			font-size 1.3em

		&:after
			content "-  \e602"
			font-size 1.3em

.sobremi
	height 100%
	
	figure
		margin 0 
		max-width 195px
		padding 0.6em 1em 0 0
		float left

		img
			border-radius 0.25em
			box-shadow 0px 0px 10px rgba(0,0,0,0.3)
			width 100%

	article
		margin 0
		padding 0

	figure
	article
		vertical-align top


.libros
	background #222 url("../img/studio.jpg") center  no-repeat
	background-size 100% auto
	background-size cover
	position relative

	div
		background rgba(255,255,255,0.5)
		border-radius 0.5em
		height 150px
		position relative
		top 4em
		left 10em
		width 12em

.nav--clone
	position fixed
	top 0
	left 0
	width 100%
	line-height 27px
	overflow-x auto
	text-align center
	white-space nowrap
	z-index 100
	/*transition -100%*/
	transform translateY(-100%)
	/*animation*/
	transition all 300ms ease-in-out

.nav--stick
	transform translateY(0%)

